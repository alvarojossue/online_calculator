<!-- views/add.erb -->
<!doctype html>
<html>
<head>
	<title>Calculator</title>
</head>
<body>
	<center>
	<img src="/awesome.jpg" alt="Awesome Logo">
	<h1 style="color:blue">Welcome to this awesome calculator</h1>
	<h1>Add</h1>
	<form action="/calculate_add" method="POST">
  		<input type="number" name="first_number" placeholder="1st number"> +
  		<input type="number" name="second_number" placeholder="2nd number">
  		<button type="submit">Calculate</button>
	</form>
	<h1>Substract</h1>
	<form action="/calculate_substract" method="POST">
  		<input type="number" name="first_number" placeholder="1st number"> -
  		<input type="number" name="second_number" placeholder="2nd number">
  		<button type="submit">Calculate</button>
	</form>
	<h1>Multiply</h1>
	<form action="/calculate_multiply" method="POST">
  		<input type="number" name="first_number" placeholder="1st number"> *
  		<input type="number" name="second_number" placeholder="2nd number">
  		<button type="submit">Calculate</button>
	</form>
	<h1>Divide</h1>
	<form action="/calculate_divide" method="POST">
  		<input type="number" name="first_number" placeholder="1st number"> /
  		<input type="number" name="second_number" placeholder="2nd number">
  		<button type="submit">Calculate</button>
	</form>
	<p style="color:green">Warning: if you use this calculator you may become extremely 4w3s0m3!</p>
	</center>
</body>
</html>